<% require 'shellwords' -%>
[Unit]
Description=<%= @description %>
Wants=basic.target
After=basic.target network.target

[Service]
<% @ulimit.each do |k, v| -%>
Limit<%= k.upcase %>=<%= v %>
<% end -%>
<% unless @user.nil? -%>
User=<%= @user %>
<% end -%>
<% unless @group.nil? -%>
Group=<%= @group %>
<% end -%>
<% @before_command.each do |c| -%>
ExecStartPre=<%= c.shelljoin %>
<% end -%>
ExecStart=<%= @command.shelljoin %>
<% if @reload_command -%>
ExecReload=<%= @reload_command.shelljoin %>
<% end -%>
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
