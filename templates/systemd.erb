[Unit]
Description=<%= @description %>
Wants=basic.target
After=basic.target network.target

[Service]
<% require 'shellwords' %>
User=<%= @user %>
Group=<%= @group %>
ExecStart=<%= @command.shelljoin %>
<% if @reload_command -%>
ExecReload=<%= @reload_command.shelljoin %>
<% end -%>
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target