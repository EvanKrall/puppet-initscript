# <% @description %> (Upstart unit)
description "<% @description %>"
start on (local-filesystems and net-device-up IFACE!=lo)
stop on runlevel [06]

<% require 'shellwords' %>
env USER=<%= @user.shellescape %>
env GROUP=<%= @group.shellescape %>

script
    <%= @command.shelljoin %>
end script

respawn
respawn limit 10 10
kill timeout 10
